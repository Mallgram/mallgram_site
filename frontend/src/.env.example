# Environment variables for Mallgram Frontend

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:5000/api/v1

# OpenAI Configuration (if using direct integration)
VITE_OPENAI_API_KEY=your-openai-api-key

# Analytics Configuration
VITE_GA_TRACKING_ID=your-google-analytics-id
VITE_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Payment Gateway Configuration
VITE_PAYSTACK_PUBLIC_KEY=your-paystack-public-key
VITE_FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# App Configuration
VITE_APP_NAME=Mallgram
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# CDN & Storage
VITE_CDN_URL=https://your-cdn-url.com
VITE_STORAGE_BUCKET=mallgram-storage
