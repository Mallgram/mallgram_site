# PayGate (South Africa)
PAYGATE_ID=your_paygate_id
PAYGATE_SECRET=your_paygate_secret

# PayFast (South Africa)
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
