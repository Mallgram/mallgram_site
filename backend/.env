# Delivery/Courier APIs
DHL_API_KEY=your_dhl_api_key
FEDEX_API_KEY=your_fedex_api_key
UPS_API_KEY=your_ups_api_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Job Configuration
ENABLE_CRON_JOBS=true
PRODUCT_REFRESH_SCHEDULE=0 2 * * *
ANALYTICS_SCHEDULE=0 1 * * *
DELIVERY_TRACKING_SCHEDULE=0 */6 * * *
AFFILIATE_PAYOUT_SCHEDULE=0 9 * * 1

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Cache Configuration
CACHE_TTL=3600

# Security
CORS_ORIGIN=http://localhost:3000,https://mallgram.org
HELMET_ENABLED=true

# Analytics & Monitoring
ANALYTICS_ENABLED=true
ERROR_TRACKING_ENABLED=true
